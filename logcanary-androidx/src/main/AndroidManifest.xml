<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fairy.easy.logcanary" >
    <application>
        <activity
            android:name=".LogInfoActivity"
            android:enabled="false"
            android:icon="@drawable/log_canary_icon"
            android:label="@string/log_canary_display_activity_label"
            android:taskAffinity="fairy.easy.logcanary"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/log_canary_LogCanary.Base">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

    </application>
</manifest>
